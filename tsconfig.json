{
  "exclude": ["test"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "es2017"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
